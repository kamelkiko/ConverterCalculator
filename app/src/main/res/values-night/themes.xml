<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/base</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/marginNormal</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:textColorHint">@color/hint_Color</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputEditText.Binary">
        <item name="android:inputType">number</item>
        <item name="android:digits">"01"</item>
    </style>

    <style name="TextInputEditText.Decimal">
        <item name="android:inputType">number</item>
        <item name="android:digits">"0123456789"</item>
    </style>

    <style name="TextInputEditText.Octal">
        <item name="android:inputType">number</item>
        <item name="android:digits">"01234567"</item>
    </style>

    <style name="TextInputEditText.Hex">
        <item name="android:inputType">text</item>
        <item name="android:digits">"0123456789aAbBcCDdEeFf"</item>
    </style>
</resources>